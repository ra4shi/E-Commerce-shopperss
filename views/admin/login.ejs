<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  <title>LOG IN</title>
</head>

<section>
  <div class="login-page">
    <h1 style="text-align: center;font-size:60px; color: #b3b3b3;">Admin Login</h1>

    <div class="form">

      <form class="login-form" action="" method="post">
        <input type="email" name="email" id="email" placeholder="email" /><br>
        <span id="span-email" style="color: red;"></span>
        <input type="password" name="password" id="password" required placeholder="password" /><br>
        <span id="span-password" style="color: red;"></span><br>
        <% if(typeof error !=="undefined" ){ %>

          <span style="color:red;">
            <%= error %>
          </span>
          <% } %>
           
         <input type="submit"  onclick="validate()" value="Login" required style="background-color: rgb(76, 76, 190);" > <br>
           

           
      </form>
    </div>
  </div>
</section>
    

</body>

<style>
  
      body{
        background-image:url("https://images.pexels.com/photos/5632395/pexels-photo-5632395.jpeg?auto=compress&cs=tinysrgb&w=600");
        background-size: 100%;
      }
    .login-page {
      width: 360px;
      padding: 8% 0 0;
      margin: auto;
    }
    .form {
      position: relative;
      z-index: 1;
      background: #FFFFFF;
      max-width: 360px;
      margin: 0 auto 100px;
      padding: 45px;
      text-align: center;
      box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
    }
    .form input {
      font-family: "Roboto", sans-serif;
      outline: 0;
      background: #f2f2f2;
      width: 100%;
      border: 0;
      margin: 0 0 15px;
      padding: 15px;
      box-sizing: border-box;
      font-size: 14px;
    }
    .form button {
      font-family: "Roboto", sans-serif;
      text-transform: uppercase;
      outline: 0;
      background: #4CAF50;
      width: 100%;
      border: 0;
      padding: 15px;
      color: #FFFFFF;
      font-size: 14px;
      -webkit-transition: all 0.3 ease;
      transition: all 0.3 ease;
      cursor: pointer;
    }
    a:hover{
      color: rgb(31, 94, 36);
    }
    
    .form .message {
      margin: 15px 0 0;
      color: #b3b3b3;
      font-size: 12px;
    }
    .form .message a {
      color: #4CAF50;
      text-decoration: none;
    }
    .form .register-form {
      display: none;
    }
    .container {
      position: relative;
      z-index: 1;
      max-width: 300px;
      margin: 0 auto;
    }
    .container:before, .container:after {
      content: "";
      display: block;
      clear: both;
    }
    .container .info {
      margin: 50px auto;
      text-align: center;
    }
    .container .info h1 {
      margin: 0 0 15px;
      padding: 0;
      font-size: 36px;
      font-weight: 300;
color: #1a1a1a;
}
.container .info span {
color: #fffbfb;
font-size: 12px;
}
.container .info span a {
color: #f7db09;
text-decoration: none;
}
.container .info span .fa {
color: #EF3B3A;
}
</style>


<script>
  function validate(){
     
   
     email=document.getElementById('email').value
     password=document.getElementById('password').value
 
     
     if(email==''){
         document.getElementById('span-password').innerText='please must fill email '
     }
     else{
         document.getElementById("span-password").innerText=""
     } if(password==''){
         document.getElementById('en4').innerText='please must fill password '
     }
     else{
         document.getElementById("en4").innerText=""
     }
 
    }


</script>


 
