          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
               

                <table class="table table-striped" id="user-table">
                  <thead>
                    <tr>
                      <!-- <th> No</th> -->
                      <th>No</th>
                      <th>Heading</th>
                      <th>Discription</th>
                      <th>Image</th>
                      <th>status</th>
                      <th>Update</th>
                      <th>Option </th>
                    </tr>
                  </thead>
                  <tbody>
                    <%let count=1%> <%bannerData.forEach((banner)=>{%>
                    <tr>
                      <td class="text-black"><%=count%></td>
                      <td class="text-black"><%=banner.heading%></td>
                      <td class="text-black"><%=banner.discription%></td>
                      <td class="text-black">
                        <img
                          src="/admin/img/<%=banner.image%>"
                          alt="product image"
                          style="width: 70px; height: 60px; border-radius: 0"
                        />
                      </td><br>
                      <td class="text-black"><%=banner.status%></td>
                      <td class="text-black"><a href="/admin/editbanner/<%=banner._id%> "  onclick="return confirm('Are you sure you want to edit this banner?')" class="btn btn-info">Edit</a></td>
                      <td class="text-black">
                        <%if(banner.status==true){%>
                        <button 
                          onclick="bannerstatus('<%=banner._id%>','false')"
                          class="btn btn-danger"
                        >
                          Block
                        </button>
                        <%}else{%>
                        <button
                          class="btn btn-success"
                          onclick="bannerstatus('<%=banner._id%>','true')"
                        >
                          UnBlock
                        </button>
                        <%}%>
                      </td>
                    </tr>
                    <%count++%> <%})%>
                   <a href="/admin/addbanner" class="btn btn-success " id="addProduct"  >ADD-New-Banner</a>
                  </tbody>
                </table>
               
              </div>
