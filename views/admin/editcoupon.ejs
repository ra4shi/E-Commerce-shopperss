                        value="<%=coupon.discountAmount%>"
                        name="amount"
                        type="number"
                        required
                      />
      
                    <label class="block text-sm">
                      <span class="text-gray-700 dark:text-gray-400">Expiry Date</span>
                      <input
                        class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                        id="date"
                        name="date"
                        value="<%=coupon.expiryDate%>"
                        type="date"
                        required
                      />
                      
                    </label>
      
                    <label class="block text-sm">
                      <span class="text-gray-700 dark:text-gray-400">Max Cart Amount</span>
                      <input
                        class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                        id="cartAmount"
                        name="cartAmount"
                        value="<%=coupon.maxCartAmount%>"
                        type="number"
                        required
                      />
                      
                    </label>
      
                    <label class="block text-sm">
                      <span class="text-gray-700 dark:text-gray-400">Max Discount Amount</span>
