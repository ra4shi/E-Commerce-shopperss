<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-6 mx-auto">
      <h2
        class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"
      >
        Tables
      </h2>

      <!-- With actions -->
      <h4
        class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"
      >
        Table of products
      </h4>
      <div class="w-full overflow-hidden rounded-lg shadow-xs">
        <div class="w-full overflow-x-auto">
          <table class="w-full whitespace-no-wrap">
            <thead>
              <tr
                class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800"
              >
                <th class="px-4 py-3">Header</th>
                <th class="px-4 py-3">Image</th>
                <th class="px-4 py-3">description</th>
                <th class="px-4 py-3">Action</th>
              </tr>
            </thead>
            <tbody
              class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800"
            >
            <tr>
              <%
              if(banner.length>0){
                for(let i=0;i<banner.length;i++){
                  %>
                  <tr class="text-gray-700 dark:text-gray-400">
                      
                    <td class="px-4 py-3 text-sm"><%=banner[i].header%></td>
                    <td><img src="/productImages/<%=banner[i].image%>" alt="" width="50px"></td>
                    <td class="px-4 py-3 text-sm"><div style="width: 500px;overflow: auto;"><%=banner[i].description%></div></td>
                      
                      <td class="">
                          <div class="flex items-center text-sm">
                            <!-- Avatar with inset shadow -->
                            <div
                              class="relative hidden  h-8 mr-3 rounded-full md:block"
                            >
                              <div
                                class="absolute inset-0 rounded-full shadow-inner"
                                aria-hidden="true"
                              ></div>
                            </div>
                            <div>
                              <button style="background-color: rgb(22, 73, 22); width: 60px;height: 30px;border-radius: 10px;color: white;"><a href="/admin/editProduct?id=">Edit</a></button>
                              <button style="background-color: rgb(107, 9, 26); width: 60px;height: 30px;border-radius: 10px;color: white;"><a href="/admin/deleteProduct?id=">Delete</a></button>
                            </div>
                          </div>
                        </td>
                  </tr>
                  <%
                }
              }else{
                %>
                <p style="color: white;padding: 30px;font-family: Georgia, 'Times New Roman', Times, serif;">Banner not found</p>
                <%
              }
              %>
            </tr>

            </tbody>
          </table>
        </div>              
      </div>
